  <% end %>

<% if current_user && current_user.admin %>
  <div class="form-group">
    <div class="col-sm-10">
    <%= form.label :title %>
    <div class="field">
    <%= form.text_field :title %>
    </div>
  </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
    <%= form.label :conclusion %>
    <%= form.text_area :conclusion %>
  </div>
  </div>

  <div class="form-group">
    <%= form.label :published %>
    <%= form.check_box :published %>
  </div>

  <% else %>
  <% if current_user %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :conclusion %>
    <%= form.text_area :conclusion %>
  </div>
  <% end %>

<% end %>
  <div class="actions">
    <%= form.submit %>
  </div>
