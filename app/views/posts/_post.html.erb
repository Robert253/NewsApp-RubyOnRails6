
<div class='col-sm-6 col-lg-4'>
  <div class="card">
  <div class="card-block p-3 mb-2 bg-light text-dark">
    <h4 class="card-title"><%= link_to post.title, post %></h4>
    <p class="published-date"><%= post.display_day_published %></p>
    <p class="published-user"><%= post.user_name_published %></p>
    <p class-"card-text"><%= truncate(post.body, length: 130) %></p>
    <%= link_to 'Read', post, class: 'btn btn-info' %>
    <% if current_user && current_user.admin %>
    <%= link_to 'Publish', edit_post_path(post) , class: 'btn btn-success' %>
    <%= link_to 'Delete post', post, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger' %>
    <% end %>
    </div>
  </div>
</div>
